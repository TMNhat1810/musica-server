enum MediaType {
    video
    audio
}

model Media {
    id            String    @id @default(uuid())
    title         String
    description   String?
    user_id       String
    media_url     String
    thumbnail_url String?
    type          MediaType
    created_at    DateTime  @default(now())
    updated_at    DateTime  @updatedAt

    user     User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
    comments Comment[]

    @@index([user_id])
}
